<%- include("partials/header.ejs") %>


 <div class="date">Work List</div>
  <div class="todo-app">
    <div class="wrapper">
      <form action="/work" method="POST">
        <input
          id="input-box"
          type="text"
          name="newItem"
          placeholder="Add your task..."
          autocomplete="off"
          required="required"
        />
        <button type="submit" class="add-btn">
          <img src="images/right-arrow.svg" height="25" />
        </button>
      </form>
    </div>
    <div class="list">
      <ul>
        <% for(var i = 0; i < newListItems.length; ++i) {  %>
        <li class="task-box">
          <input type="checkbox" id=<%=newListItems[i] %> />
          <label for=<%=newListItems[i] %> class="task"><%=newListItems[i] %></label>
        </li>
        <% }; %>
      </ul>
    </div>
  </div>

</section>

