  <body>
    <section>
    <div class="fbtn">
      <form action="/today" method="POST">
        <button
          type="submit"
          name="id"
          value="1"
          class="today-btn btn btn-light btn-lg"
        >
          <img src="/images/calendar3.svg" alt="today icon" height="25" /> Today
        </button>
      </form>
      <form action="/work-list" method="POST">
        <button
          type="submit"
          name="id"
          value="2"
          class="work-btn btn btn-light btn-lg"
        >
          <img src="/images/briefcase.svg" alt="today icon" height="25" /> Work
        </button>
      </form>
    </div>
  
